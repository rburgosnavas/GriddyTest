<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.rburgos.griddytest">
    <uses-sdk android:minSdkVersion="16"/>
    <application android:icon="@drawable/ic_launcher"
                 android:label="@string/app_name"
                 android:theme="@style/ftn_style">
        <activity android:name=".MainActivity"
                  android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".CellFragment"
                  android:configChanges="orientation|screenSize"/>
        <activity android:name=".EditNoteActivity"
                  android:label="@string/edit_activity_name"/>
        <activity android:name=".NotesListActivity"/>
    </application>
</manifest>
