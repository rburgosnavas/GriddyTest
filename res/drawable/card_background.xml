<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow -->
    <item
            android:left="2dp"
            android:top="2dp"
            android:right="2dp">

        <shape
                android:shape="rectangle">

            <corners
                    android:radius="5dp"/>

            <padding
                    android:top="0dp"
                    android:right="0dp"
                    android:bottom="2dp"
                    android:left="0dp"/>

            <gradient
                    android:angle="270"
                    android:centerX="0.15"
                    android:startColor="#FF000000"
                    android:centerColor="#FF222222"
                    android:endColor="#44DDDDDD"/>

        </shape>

    </item>

    <!-- White background -->
    <item>

        <shape
                android:shape="rectangle">

            <solid
                    android:color="#FFFFFF"/>

            <stroke
                    android:color="#44DDDDDD"
                    android:width="1dp"/>

            <corners
                    android:radius="5dp"/>

        </shape>

    </item>

</layer-list>